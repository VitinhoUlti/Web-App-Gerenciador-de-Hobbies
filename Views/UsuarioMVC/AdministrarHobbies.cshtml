@using Testezin.Entidades;

<link rel="stylesheet" href="style.css">

@{
    ViewData["Title"] = "AdministarHobbies";
}

<h1>@ViewBag.Usuario</h1>

@{
    foreach(Hobbies item in ViewBag.Resposta){
        <div style="border: 1px solid #e5e5e5; margin-bottom: 1vh;">
            <h1 style="border-bottom: 1px solid #e5e5e5;">ID: @item.Id</h1>
            <h1 style="border-bottom: 1px solid #e5e5e5;">Nome: @item.Nome</h1>
            <h1 style="border-bottom: 1px solid #e5e5e5;">Aniversario: @item.Aniversario</h1>
            <h1 style="border-bottom: 1px solid #e5e5e5;">Hobbie: @item.Hobbie</h1>
            <h1 style="border-bottom: 1px solid #e5e5e5;">Gostos: @item.Gostos</h1>
            <h1>PossiveisPresentes: @item.PossiveisPresentes</h1>
        </div>
    }
}